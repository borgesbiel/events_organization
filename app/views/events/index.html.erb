<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <br>
  <div style='width: 800px;'>
    <div id="gmaps" style='width: 1400px; height: 400px;'></div>
  </div>

  <h1>Listing Events</h1>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Name</th>
          <th>Image</th>
          <th>Address</th>
          <th>Event date</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <%= content_tag :td, event.user.first_and_last_name if event.user.present? %>
            <td><%= event.name %></td>
            <td><%= image_tag event.image.url(:thumb) %></td>
            <td><%= event.address %></td>
            <td><%= event.event_date %></td>
            <td><%= event.latitude %></td>
            <td><%= event.longitude %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class="col-md-4">
  <br>
  <%= link_to 'New Event', new_event_path,{class: 'btn btn-default'} %> |
  <%= link_to 'Users', users_path,{class: 'btn btn-default'} %>
</div>
  
<script type="text/javascript">
  //google maps
  handler = Gmaps.build('Google',
  {
    markers: {
      clusterer: {
        gridSize: 10, maxZoom:15
      }
    }
  });

  handler.buildMap({
    provider: {
      disableDefaultUI: false
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'gmaps'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @all_gmaps_markers.to_json %>);

    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(8);
    handler.map.centerOn;
  }
  );
</script>
