<%= form_for @event, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :user %><br>
      <%= f.collection_select(:user_id, User.all.order(fname: :asc), :id, :first_and_last_name, :include_blank => true, class: 'ui search dropdown' ) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :event_date %><br>
      <%= f.date_select :event_date %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :latitude %><br>
      <%= f.text_field :latitude %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :longitude %><br>
      <%= f.text_field :longitude %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.submit 'Update Event', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

<br>
